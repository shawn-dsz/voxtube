# VoxTube Configuration

# Server port
PORT=3000

# Kokoro TTS server URL
KOKORO_URL=http://localhost:8880

# Cache directory for generated audio
CACHE_DIR=./cache

# How many days to keep cached audio
CACHE_TTL_DAYS=7

# Maximum transcript length (characters)
MAX_TRANSCRIPT_LENGTH=50000

# Background cache cleanup interval (hours)
CLEANUP_INTERVAL_HOURS=12

# Path to Claude CLI (defaults to 'claude' in PATH)
CLAUDE_CLI_PATH=claude
