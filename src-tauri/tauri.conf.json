{
  "productName": "VoxTube",
  "version": "0.1.0",
  "identifier": "com.voxtube.app",
  "build": {
    "frontendDist": "./assets",
    "devUrl": "http://localhost:3847",
    "beforeDevCommand": "bun run --watch src/index.ts"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "VoxTube",
        "width": 1200,
        "height": 800,
        "decorations": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "binaries/*"
    ]
  }
}
